  <script>
    $(document).ready(function () {
        // Load cities from the API
        $.ajax({
            url: '/city',
            method: 'GET',
            dataType: 'json',
            success: function (data) {
                const selectElement = $('#citySelect');
                $.each(data, function (index, city) {
                    const option = $('<option></option>')
                        .attr('value', city.name)
                        .text(city.name);
                    selectElement.append(option);
                });
            },
            error: function (xhr, status, error) {
                console.error('Error fetching cities:', error);
            }
        });

        // Handle form submission
        $('#createPersonForm').submit(function (event) {
            event.preventDefault(); // Prevent the form from submitting the default way
            const formData = {
                Name: $('#name').val(),
                Email: $('#email').val(),
                Phone: $('#Phone').val(),
                City: $('#citySelect').val()
            };
            console.log("Form Data:", formData); // Debugging: log the form data
            // Show loading message
            $('.loading').show();
            $('.error-message').hide();
            $('.sent-message').hide();

            $.ajax({
                type: 'POST',
                url: '@Url.Action("Create", "CPerson")',
                data: JSON.stringify(formData),
                contentType: 'application/json; charset=utf-8',
                success: function (response) {
                    console.log("Response:", response); // Debugging: log the server response
                    if (response.success) {
                        // Display success message or redirect
                        $('.sent-message').show();
                        $('.error-message').hide();
                        // setTimeout(function () {
                        //     window.location.href = '@Url.Action("Index", "Person")';
                        // }, 2000);
                    } else {
                        // Display error messages
                        $('.error-message').text(response.errors.join(', ')).show();
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error creating person:', error);
                    console.error('XHR:', xhr); // Debugging: log the XHR object
                    console.error('Status:', status); // Debugging: log the status
                    $('.error-message').text('An error occurred while creating the person.').show();
                }
            });
        });
    });

  </script>
  
   